{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "moduleResolution": "node",
        "rootDir": ".",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": false,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@repositories/*": [
                "src/repositories/*"
            ],
            "@entities/*": [
                "src/entities/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@middlewares/*": [
                "src/middlewares/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@config/*": [
                "src/config/*"
            ]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*",
        "src/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}